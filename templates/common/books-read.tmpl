{{define "books-read"}}
{{- $lpData := index . 0 -}}
{{- $books := index . 1 -}}
{{- $covers := index . 2 -}}
{{- $badgesData := index . 3 -}}
{{- $lpFolders := index . 4 -}}
{{- $totalBooksRead := index . 5 -}}

[//]: # (Auto generated file from templates)

# :green_book: Books Read ({{ $totalBooksRead }} :books:)

| Cover | Info | Learning Paths |
| :---: | :--- | :--- |
{{- range $books -}}
{{- if (and (.Draft | not) (.BadgesRefs | toStrings | has "read")) -}}
{{/* Build book learning paths section */}}
{{- $paths := list -}}
{{- range (dedupBookLearningPaths .LearningPaths) -}}
{{- $lp := get $lpData (.LearningPathRef | toString) -}}
{{- if (empty $lp | not) -}}
{{- $name := printf "<li>[%s](%s/%s)</li>" $lp.Name $lpFolders . | trim -}}
{{- $paths = append $paths $name -}}
{{- end -}}
{{- end -}}
